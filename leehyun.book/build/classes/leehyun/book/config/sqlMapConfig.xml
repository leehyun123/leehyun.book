<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration> 
	<properties resource = "leehyun/book/config/jdbc.properties" />
     
	<typeAliases>
		<typeAlias alias="user" type="leehyun.book.user.domain.User" />
		<typeAlias alias="book" type="leehyun.book.user.domain.Book" />
		<typeAlias alias="img" type="leehyun.book.user.domain.Img" />
		<typeAlias alias="order" type="leehyun.book.user.domain.Order" />
		<typeAlias alias="orderBooks" type="leehyun.book.user.domain.OrderBooks" />
		<typeAlias alias="refund" type="leehyun.book.user.domain.Refund" />
		<typeAlias alias="refundBooks" type="leehyun.book.user.domain.RefundBooks" />
	</typeAliases>
	
	<environments default = "development">
		<environment id="development">

			<transactionManager type="JDBC" />

			<dataSource type="POOLED"> 
				<property name="driver" value="${JDBC.Driver}" />
				<property name="url" value="${JDBC.ConnectionURL}"/>
				<property name="username" value="${JDBC.Username}"/>
				<property name="password" value="${JDBC.Password}"/>
			</dataSource>
		</environment>
	</environments>

	<mappers>
		<mapper resource="leehyun/book/user/dao/map/userMap.xml" />
		<mapper resource="leehyun/book/book/dao/map/bookMap.xml" />
	</mappers>
</configuration>